<div class="login-wrapper">
  <div class="login">
  <%= image_tag("https://res.cloudinary.com/therainycloud/image/upload/v1601637674/thc-logo-1_dfmhnc.png") %>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :user_name,
                    label: "Nombre de usuario",
                    required: true,
                    autofocus: true %>
        <%= f.input :password,
                    label: "ContraseÃ±a",
                    required: true,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, 
                    label: "Recordarme",
                    as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Log in", class: "button-primary" %>
      </div>
    <% end %>
  </div>

</div>
