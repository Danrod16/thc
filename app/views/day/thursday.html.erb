<div class="dashboard">
    <div class="nav-wrapper">
      <ul class="nav mb-3" %>
          <% @days.each do |day| %>
          <% path = "#{day}".downcase %>
            <% if current_page?("/#{path}") %>
                <%= link_to day, path, class: "nav-pills-current" %>
            <% else %>
                <%= link_to day, path, class: "nav-pills" %>
            <% end %>
          <% end %>
      </ul>
    </div>

  <div class="table-responsive">
    <table class="table table-striped">
      <thead class="thead">
        <tr>
          <th>Fecha</th>
          <th>Nombre</th>
          <th>Producto</th>
          <th>Talla</th>
          <th>Prote√≠na</th>
          <th>Custom</th>
          <th>Notas</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td><%= order.meal_date %></td>
            <td><%= order.customer_name %></td>
            <td><%= order.product.meal_name %></td>
            <td><%= order.meal_size %></td>
            <td><%= order.meal_protein %></td>
            <td><%= order.meal_custom %></td>
            <td><%= order.notes %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
