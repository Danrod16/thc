<div class="nav-wrapper">
  <ul class="nav mb-3" %>
      <% @days.each do |day| %>
        <% path = "#{day[1]}".downcase %>
        <% if current_page?("/#{path}") %>
            <%= link_to day[0], path, class: "nav-pills-current" %>
        <% else %>
            <%= link_to day[0], path, class: "nav-pills" %>
        <% end %>
      <% end %>
  </ul>
</div>
