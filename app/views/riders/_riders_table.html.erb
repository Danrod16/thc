<div class="header header-rider">
  <h1>Rider: <%= @rider.name %></h1>
</div>
<div class="cards">
  <% @rider.deliveries.each do |delivery| %>
    <%= link_to delivery_path(delivery) do %>
      <div class="card-category">
        <div class="card-img">
          <%= image_tag("https://res.cloudinary.com/therainycloud/image/upload/v1602684570/THC/Untitled_design_30_yuf8is.png") %>
        </div>
        <div class="card-title">
          <%= delivery.name %>
        </div>
        <div class="card-description">
          <strong>Rider: </strong><p><%= delivery.rider.name %></p>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
