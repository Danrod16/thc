<!DOCTYPE html>
<html>
  <head>
    <title>The healthiest choice dashboard</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel=“icon” type=“image/png” sizes=“32x32” href=“https://res.cloudinary.com/therainycloud/image/upload/v1603968129/THC/favicon-32x32_jusqok.png>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload', defer: true %>
  </head>

  <body>
    <%= render 'shared/flashes' %>
    <% if !current_user || current_user.rider? %>
      <div class="dashboard">
        <%= yield %>
      </div>
    <% else %>
      <%= render "shared/side_bar" %>
      <section class="app-content">
        <div class="dashboard">
          <%= yield %>
      </div>
    </section>
    <% end %>
  </body>
</html>
