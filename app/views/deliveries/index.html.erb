<%= render 'riders/rider_pills' %>
<div class="header">
  <h1>Grupos de reparto</h1>
 <p> <strong>#Pedidos no asignados:</strong> <%= @remaining_orders %></p>
</div>
<div class="cards">
  <% @delivery_groups.each do |delivery| %>
    <%= link_to delivery_path(delivery) do %>
      <div class="card-category">
        <div class="card-img">
          <%= image_tag("https://res.cloudinary.com/therainycloud/image/upload/v1602063855/THC/barcelona_illustration_lcmanm.png") %>
        </div>
        <div class="card-title">
          <%= delivery.name %>
        </div>
        <div class="card-description">
          <strong>Rider: </strong><p><%= delivery.rider.name %></p>
        </div>
      </div>
    <% end %>
  <% end %>
  <%= link_to new_delivery_path do %>
    <div class="card-category new-card">
      <div class="card-img">
          <i class="fas fa-plus-square"></i>
      </div>
    </div>
  <% end %>
</div>
