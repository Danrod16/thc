<h1><%= @delivery_group.name %></h1>
<h2>Rider: <%= @delivery_group.rider.name %></h2>
<div class="table-responsive">
  <table class="table table-striped">
    <thead>
          <tr>
            <th>Fecha</th>
            <th>Nombre</th>
            <!-- <th>Producto</th> -->
            <th>Telefono</th>
            <th>Direcci√≥n</th>
            <th>Notas</th>
          </tr>
        </thead>
    <tbody class="sortable">  <!-- sortable target -->
      <% @delivery_group.orders.each do |order| %>
        <tr data-id = <%= "#{order.id}" %> >
